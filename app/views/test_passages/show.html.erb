<h1> <%= t('.header', title: @test_passage.test.title) %>Test</h1>

<h2><%= @test_passage.current_question.body %></h2><br>
<b>
  <%= t('.current_question', id: @test_passage.current_question_id %> <%= t('.of') %>  <%= t('.total_questions', count: @test_passage.test.questions.count %>
</b>

<%= form_with url: test_passage_path(@test_passage), local: true, method: :put do |form| %>
  <%= form.collection_check_boxes :answer_ids, @test_passage.current_question.answers, :id, :body, include_hidden: false do |b| %>
    <p>
      <%= b.check_box id: "answer_ids_#{b.object.id}" %>
      <%= b.label %>
    </p>
  <% end%>

  <p><%= form.submit t('.next') %></p>
<% end%>