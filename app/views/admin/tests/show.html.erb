<h2>Test <%= @test.title %> have <%= 'question'.pluralize(@test.questions.count) %></h2>
<p>
  <strong><%= t('.title') %></strong>
  <%= @test.title %>
</p>

<p>
  <strong>Level:</strong>
  <strong><%= t('.level') %></strong>
</p>

<p>
  <% @test_questions.each do |question| %>
    <li>
      <%= question.body %>
    </li>
  <% end %>
</p>

<p>
<h2><%= t('.questions') %></h2>

  <ol>
    <%= render partial: 'admin/questions/question', collection: @test.questions %>
  </ol>
</p>

<%= link_to t('helpers.edit'), edit_admin_test_path(@test) %>
<%= link_to t('helpers.back'), admin_tests_path %>