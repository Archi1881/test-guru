<% if logged_in? %>
 
<h2>    <% = link_to t('.header'), root_path %>Welcome, #{current_user.name} Guru | #{link_to 'Logout', :logout, method: :delete} %></h2>

<% else %>

  <h2><%= link_to 'Registration', :signup %></h2>    | 
  <h2><%= link_to 'Login', :login %></h2><br>

  <p><%= t('helpers.welcome') %> <%= current_user.email %></p>
  <%= link_to t('helpers.logout'), session_path(session), method: :delete %>

<% end %>